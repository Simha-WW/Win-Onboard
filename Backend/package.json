{
  "name": "winonboard-backend",
  "version": "1.0.0",
  "description": "Backend API server for WinOnboard HR Portal - Comprehensive onboarding and HR management system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist node_modules/.cache",
    "postinstall": "npm run build",
    "db:test": "node db/cleanup.js",
    "db:migrate": "node db/migrate.js",
    "db:setup": "npm run db:migrate",
    "db:add-blob-storage": "node database_scripts/add-blob-storage-columns.js",
    "db:add-blob-urls": "node database_scripts/add-blob-url-columns.js"
  },
  "keywords": [
    "hr",
    "onboarding",
    "portal",
    "api",
    "express",
    "typescript",
    "nodejs"
  ],
  "author": "WinOnboard Team",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.4",
    "@azure/storage-blob": "^12.17.0",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.3",
    "mssql": "^12.2.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mssql": "^9.1.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
