# WinOnboard Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration (MySQL)
# TODO: Update these values when database is set up
DB_HOST=localhost
DB_PORT=3306
DB_NAME=winonboard
DB_USER=root
DB_PASSWORD=your_database_password
DB_CONNECTION_LIMIT=10

# Email Configuration (SMTP)
# Configure these for sending welcome emails to new freshers
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_hr_email@company.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM_NAME=WinOnboard HR Team
EMAIL_FROM_ADDRESS=hr@company.com

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
BCRYPT_SALT_ROUNDS=12

# Azure Blob Storage Configuration
# For document uploads - obtain these from Azure Portal
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_storage_account;AccountKey=your_account_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=bgv-documents
# Alternative: Use SAS token instead of connection string
# AZURE_STORAGE_SAS_URL=https://yourstorageaccount.blob.core.windows.net/?sv=2021-06-08&ss=b&srt=sco&sp=rwdlacupiytfx&se=...

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Azure AI Foundry Agent Configuration
# For AI-powered chatbot assistant
AZURE_FOUNDRY_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project-name
AZURE_FOUNDRY_API_KEY=your-azure-foundry-api-key-here

# Company Information (for emails and branding)
COMPANY_NAME=Your Company Name
COMPANY_WEBSITE=https://yourcompany.com
COMPANY_LOGO_URL=https://yourcompany.com/logo.png
HR_CONTACT_EMAIL=hr@yourcompany.com
HR_CONTACT_PHONE=+1-555-0123